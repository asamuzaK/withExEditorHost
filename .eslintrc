{
  "env": {
    "browser": true,
    "node": true,
    "webextensions": true,
    "es6": true
  },
  "extends": [
    "plugin:jsdoc/recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "reportUnusedDisableDirectives": true,
  "rules": {
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "asyncArrow": "always",
      "named": "never"
    }]
  }
}
